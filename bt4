#include <iostream>
using namespace std;
const double PI = 3.14;
void ChuViTron(int r)
{
  double P;
  P = PI * r * 2;
  cout<<"\nChu vi hinh tron la: "<<P;
}
void DienTichTron(int r)
{
  double S;
  S = PI * r * r;
  cout<<"\nDien tich hinh tron la: "<<S;
}
int main()
{
  int r;
  cout<<"\nNhap ban kinh r: ";
  cin>>r;
  ChuViTron(r);
  DienTichTron(r);
  return 0;
}